<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_library_book_form" model="ir.ui.view">
            <field name="name">book_library.book.form</field>
            <field name="model">book_library.book</field>
            <field name="arch" type="xml">
                <form string="Operation Templates">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" placeholder="Book1"/>
                            <h1><field name="name" placeholder="e.g. Book1"/></h1>
                        </div>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_library_book_tree" model="ir.ui.view">
            <field name="name">book_library.book.tree</field>
            <field name="model">book_library.book</field>
            <field name="arch" type="xml">
                <tree string="Bank Reconciliation Move Presets">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="open_books_action" model="ir.actions.act_window">
            <field name="name">Open Books list</field>
            <field name="res_model">book_library.book</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="sms_composer_view_form_inherit" model="ir.ui.view">
            <field name="name">sms.composer.view.form</field>
            <field name="model">sms.composer</field>
            <field name="inherit_id" ref="sms.sms_composer_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='body']" position="after">
                    <field name="res_model"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>